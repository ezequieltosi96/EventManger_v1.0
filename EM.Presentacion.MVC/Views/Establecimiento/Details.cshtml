@model EM.Presentacion.MVC.Models.Establecimiento.EstablecimientoViewModel
@{
    ViewData["Title"] = "Detalle Establecimiento";
    Layout = "_LayoutAdmin";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd>@Model.Nombre</dd>
            <dt>@Html.DisplayNameFor(model => model.Direccion.Ubicacion)</dt>
            <dd>@Model.Direccion.Ubicacion</dd>
            <dt>@Html.DisplayNameFor(model => model.EstaEliminado)</dt>
            <dd>@Model.EstaEliminado</dd>
        </dl>
    </div>
</div>

<div>
    <a class="btn btn-default" asp-action="Index"><span class="glyphicon glyphicon-menu-left"></span>Volver a la lista</a>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"><span class="glyphicon glyphicon-pencil"></span></a>
    }
    <a class="btn btn-primary" asp-controller="Sala" asp-action="Index" asp-route-establecimientoId="@Model.Id"><span class="glyphicon glyphicon-tent"></span> Ver Salas</a>
</div>