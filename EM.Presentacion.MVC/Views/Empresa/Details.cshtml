@model EM.Presentacion.MVC.Models.Empresa.EmpresaViewModel
@{
    ViewData["Title"] = "Detalle Empresa";
    Layout = "_LayoutAdmin";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.RazonSocial)</dt>
            <dd>@Model.RazonSocial</dd>
            <dt>@Html.DisplayNameFor(model => model.NombreFantasia)</dt>
            <dd>@Model.NombreFantasia</dd>
            <dt>@Html.DisplayNameFor(model => model.Cuil)</dt>
            <dd>@Model.Cuil</dd>
            <dt>@Html.DisplayNameFor(model => model.DireccionStr)</dt>
            <dd>@Model.DireccionStr</dd>
            <dt>@Html.DisplayNameFor(model => model.Email)</dt>
            <dd>@Model.Email</dd>
            <dt>@Html.DisplayNameFor(model => model.EstaEliminado)</dt>
            <dd>@Model.EstaEliminado</dd>
        </dl>
    </div>
</div>

<div>
    <a class="btn btn-default" asp-action="Index"><span class="glyphicon glyphicon-menu-left"></span>Volver a la lista</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"><span class="glyphicon glyphicon-pencil"></span></a>
    <a class="btn btn-primary" asp-controller="Disertante" asp-action="Index" asp-route-empresaId="@Model.Id"><span class="glyphicon glyphicon-user"></span>Ver Disertantes</a>
</div>
