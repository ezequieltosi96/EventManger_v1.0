@model EM.Presentacion.MVC.Models.Identity.UsuarioViewModel

@{
    ViewData["Title"] = "Iniciar Sesion";
}


<div class="jumbotron" style="background: transparent;">
    <div class="text-center">
        <h1>Iniciar Sesion</h1>
    </div>
    <div class="form-login-cliente-container">
        <form asp-action="LogIn" asp-route-eventoId="@ViewBag.EventoId">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" value="admin@eventmanager.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" value="EventManager" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                @if (ViewBag.EventoId != null)
                {
                    <a asp-area="" asp-controller="Account" asp-action="Register" asp-route-eventoId="@ViewBag.EventoId">Registrate</a>
                }
                <input type="submit" value="Ingresar" class="btn btn-primary btn-lg pull-right" />
            </div>
        </form>
    </div>
</div>
