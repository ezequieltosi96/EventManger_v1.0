@model EM.Presentacion.MVC.Models.Factura.FacturaViewModel
@{
    ViewData["Title"] = "Factura";
    Layout = "~/Views/Shared/_LayoutNoNavBar.cshtml";
}
<head>
    <link rel="stylesheet" href="/css/StyleSheet.css" />
</head>
<div id="pdfContainer" style="text-align:center;">
    <div style="margin: 10px;padding: 10px;background-color: #d7b9ff;">
        <div style="margin: 0px;padding: 1px;background-color: #ffffff;">
            <div class="d-flex" style="padding: 0px;background-color: #cba2ff;margin: 2px;">
                <table style="width:100%">
                    <td style="width: 200px;height: 100px;">
                        <div style="width: 200px;height: 100px;">
                            <img style="width: 100%;height: 100%;" src="~/images/logo_2.png" />
                        </div>
                    </td>
                    <td>
                        <h3 class="text-left d-lg-flex my-auto justify-content-lg-start" style="font-weight:bold;">Factura @Model.TipoFactura</h3>
                    </td>
                    <td>
                        <div class="flex-shrink-0 flex-fill mb-auto">
                            <p class="text-right" style="margin-top: 0px;margin-right: 0px;margin-bottom: 0px;padding-right: 19px; font-weight: bold;">Fecha: @Model.Fecha.Date.ToShortDateString()</p>
                            <p class="text-right" style="margin-top: 0px;margin-right: 0px;margin-bottom: 0px;padding-right: 19px; font-weight: bold;">Empresa: @Model.Empresa.NombreFantasia</p>
                            <p class="text-right" style="margin-top: 0px;margin-right: 0px;margin-bottom: 0px;padding-right: 19px; font-weight: bold;">Cliente: @Model.Cliente.ApyNom</p>
                            <p class="text-right" style="margin-top: 0px;margin-right: 0px;margin-bottom: 0px;padding-right: 19px; font-weight: bold;">Direccion: Avenida Salta 637 1°A, San Miguel de Tucumán</p>
                        </div>
                    </td>
                </table>
            </div>
        </div>
    </div>
    <div></div>
    <div class="text-right" style="margin: 10px;padding: 10px;background-color: #d7b9ff;">
        <div style="margin: 0px;padding: 1px;background-color: #ffffff;">
            <div style="padding: 0px;background-color: #cba2ff;margin: 2px;">
                <div class="table-responsive text-left" style="border: 0px !important">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Entrada</th>
                                <th>Precio Unitario</th>
                                <th>Cantidad</th>
                                <th>SubTotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var facturaDetalle in Model.FacturaDetalles)
                            {
                                <tr>
                                    <td>@facturaDetalle.EntradaId</td>
                                    <td>@facturaDetalle.EntradaId</td>
                                    <td>@facturaDetalle.Cantidad</td>
                                    <td style="margin-right: 38px;text-align:right !important;">@facturaDetalle.SubTotal</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div style="margin-top: -13px;margin-right: 9px;">
                    <p style="margin: 0px;letter-spacing: 0px;line-height: 25px;font-size: 17px; font-weight:bold">Total: $@Model.Total.ToString()</p>
                </div>
            </div>
        </div>
    </div>
</div>
